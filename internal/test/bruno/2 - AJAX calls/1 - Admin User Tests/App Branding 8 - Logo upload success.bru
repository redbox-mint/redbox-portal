meta {
  name: App Branding - Logo upload success
  type: http
  seq: 51
}

post {
  url: {{host}}/default/rdmp/app/branding/logo
  body: multipartForm
  auth: none
}

headers {
  X-Source: jsclient
  Accept: application/json, text/plain, */*
}

body:multipart-form {
  logo: @file(attachment.png)
}

script:pre-request {
  const bruHelper = require("./bruno-helpers.js");
  bruHelper.setCookies({bru, req});
}

tests {
  test("Status code is 200", function(){
    expect(res.getStatus()).to.equal(200);
  });

  test("JSON content type", function(){
    expect(res.getHeader('content-type')).to.contain('application/json');
  });

  test("Logo hash returned", function(){
    var raw = res.getBody();
    var body = typeof raw === 'string' ? JSON.parse(raw) : raw;
    expect(body && typeof body.hash === 'string' && body.hash.length > 10).to.equal(true);
  });
}
