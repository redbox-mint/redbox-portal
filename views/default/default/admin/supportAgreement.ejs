<div class="main container clearfix">
    <div class="row">
        <div class="col-xs-12">
            <h2>
                <%= TranslationService.t('support-agreement-title') %>
            </h2>

            <!-- Year Selector -->
            <div class="row" style="margin-bottom: 20px;">
                <div class="col-md-12">
                    <form method="GET" id="yearSelectorForm">
                        <div class="form-group">
                            <label for="yearSelector" class="control-label">
                                <%= TranslationService.t('select-year') %>:
                            </label>
                            <select id="yearSelector" name="year" class="form-control" style="display: inline-block; width: auto; margin-left: 10px;" onchange="this.form.submit()">
                                <% availableYears.forEach(function(year) { %>
                                    <option value="<%= year %>" <%= year === selectedYear ? 'selected' : '' %>>
                                        <%= year %><%= year === currentYear ? ' (' + TranslationService.t('current-year') + ')' : '' %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                    </form>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">
                        <%= TranslationService.t('support-agreement-details') %> - <%= selectedYear %>
                    </span>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="well">
                                <h4>
                                    <%= TranslationService.t('agreed-support-days') %>
                                </h4>
                                <p class="lead text-info">
                                    <%= agreedSupportDays %> <%= TranslationService.t('days') %>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="well">
                                <h4>
                                    <%= TranslationService.t('used-support-days') %>
                                </h4>
                                <p class="lead text-warning">
                                    <%= usedSupportDays %> <%= TranslationService.t('days') %>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="well">
                                <h4>
                                    <%= TranslationService.t('remaining-support-days') %>
                                </h4>
                                <% var remainingDays = Math.max(0, agreedSupportDays - usedSupportDays); %>
                                <p class="lead <%= remainingDays > 0 ? 'text-success' : 'text-danger' %>">
                                    <%= remainingDays %> <%= TranslationService.t('days') %>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <% if (agreedSupportDays > 0) { %>
                                <% var percentage = agreedSupportDays > 0 ? (remainingDays / agreedSupportDays) * 100 : 0;
                                   var progressClass = percentage > 50 ? 'progress-bar-success' :
                                                       percentage > 20 ? 'progress-bar-warning' : 'progress-bar-danger';
                                %>
                                <div class="progress">
                                    <div class="progress-bar <%= progressClass %>" role="progressbar"
                                        aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100"
                                        style="width: <%= percentage.toFixed(1) %>%">
                                        <%= Math.round(percentage) %>% <%= TranslationService.t('available') %>
                                    </div>
                                </div>
                            <% } else { %>
                                <p class="text-muted">
                                    <%= TranslationService.t('no-agreement-configured') %>
                                </p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Timesheet Summary Section -->
            <% if (timesheetSummary && timesheetSummary.length > 0) { %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">
                        <i class="fa fa-clock-o"></i> <%= TranslationService.t('timesheet-summary-title') %>
                    </span>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th><%= TranslationService.t('timesheet-summary-description') %></th>
                                <th style="width: 120px; text-align: right;"><%= TranslationService.t('timesheet-summary-days') %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% timesheetSummary.forEach(function(item) { %>
                            <tr>
                                <td><%= item.summary %></td>
                                <td style="text-align: right;"><%= item.days %></td>
                            </tr>
                            <% }); %>
                        </tbody>
                        <tfoot>
                            <tr class="info">
                                <th><%= TranslationService.t('timesheet-summary-total') %></th>
                                <th style="text-align: right;"><%= usedSupportDays %> <%= TranslationService.t('days') %></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <% } %>

            <!-- Release Notes Section -->
            <% if (releaseNotes && releaseNotes.length > 0) { %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">
                        <i class="fa fa-file-text-o"></i> <%= TranslationService.t('release-notes-title') %>
                    </span>
                </div>
                <div class="panel-body">
                    <div class="list-group">
                        <% releaseNotes.forEach(function(note) { %>
                        <div class="list-group-item">
                            <div class="row">
                                <div class="col-md-9">
                                    <h4 class="list-group-item-heading">
                                        <% if (note.url) { %>
                                            <a href="<%= note.url %>" target="_blank" rel="noopener noreferrer">
                                                <%= note.title %>
                                                <i class="fa fa-external-link" style="font-size: 0.8em;"></i>
                                            </a>
                                        <% } else { %>
                                            <%= note.title %>
                                        <% } %>
                                    </h4>
                                    <% if (note.summary) { %>
                                        <p class="list-group-item-text text-muted">
                                            <%= note.summary %>
                                        </p>
                                    <% } %>
                                </div>
                                <div class="col-md-3 text-right">
                                    <% if (note.date) { %>
                                        <span class="label label-default">
                                            <i class="fa fa-calendar"></i> <%= note.date %>
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
            <% } %>

            <!-- No Data Notice -->
            <% if ((!releaseNotes || releaseNotes.length === 0) && (!timesheetSummary || timesheetSummary.length === 0) && agreedSupportDays === 0) { %>
            <div class="alert alert-info" role="alert">
                <strong>
                    <%= TranslationService.t('note') %>:
                </strong>
                <%= TranslationService.t('support-agreement-no-data') %>
            </div>
            <% } %>

            <div class="alert alert-info" role="alert">
                <strong>
                    <%= TranslationService.t('note') %>:
                </strong>
                <%= TranslationService.t('support-agreement-note') %>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <a href="<%= BrandingService.getBrandAndPortalPath(req) %>/admin" class="btn btn-primary">
                        <i class="fa fa-arrow-left"></i>
                        <%= TranslationService.t('back-to-admin') %>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>