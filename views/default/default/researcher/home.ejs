<!-- Hero Section -->
<div class="hero-section">
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1 class="hero-title"><span class="hero-title-bold">ReDBox:</span> <span class="hero-title-light"><%- TranslationService.t('hero-tagline') %></span></h1>
    <p class="hero-subtitle"><%- TranslationService.t('hero-description') %></p>
    <a href="<%= BrandingService.getBrandAndPortalPath(req) %>/record/rdmp/edit" class="btn btn-hero"><%- TranslationService.t('hero-cta-button') %></a>
  </div>
</div>

<!-- Feature Cards Section -->
<div class="container feature-cards-section">
  <h2 class="section-title text-center"><%- TranslationService.t('welcome-title') %></h2>
  <div class="row">
    <!-- Plan Your Research Card -->
    <div class="col-lg-3 col-md-6 mb-4">
      <div class="feature-card">
        <div class="feature-card-header">
          <div class="feature-icon">
            <i class="icon-checklist"></i>
          </div>
          <h3 class="feature-title"><%= TranslationService.t('menu-plan')%></h3>
        </div>
        <div class="feature-card-body">
          <p class="feature-description"><%- TranslationService.t('home-plan-description') %></p>
          <div class="feature-buttons">
            <a href="<%= BrandingService.getBrandAndPortalPath(req) %>/record/rdmp/edit" class="btn btn-feature-primary"><%= TranslationService.t('create-rdmp')%></a>
            <a href="<%= BrandingService.getBrandAndPortalPath(req) %>/dashboard/rdmp" class="btn btn-feature-secondary"><%= TranslationService.t('edit-dashboard-rdmp')%></a>
          </div>
        </div>
      </div>
    </div>

    <!-- Organise Workspaces Card -->
    <div class="col-lg-3 col-md-6 mb-4">
      <div class="feature-card">
        <div class="feature-card-header">
          <div class="feature-icon">
            <i class="fa fa-sitemap"></i>
          </div>
          <h3 class="feature-title"><%= TranslationService.t('menu-organise-worspace')%></h3>
        </div>
        <div class="feature-card-body">
          <p class="feature-description"><%- TranslationService.t('home-workspace-description') %></p>
          <div class="feature-buttons">
            <a href="<%= BrandingService.getBrandAndPortalPath(req) %>/workspaces/list" class="btn btn-feature-primary"><%= TranslationService.t('workspaces-dashboard')%></a>
          </div>
        </div>
      </div>
    </div>

    <!-- Manage Your Data Card -->
    <div class="col-lg-3 col-md-6 mb-4">
      <div class="feature-card">
        <div class="feature-card-header">
          <div class="feature-icon">
            <i class="fa fa-laptop"></i>
          </div>
          <h3 class="feature-title"><%= TranslationService.t('menu-manage')%></h3>
        </div>
        <div class="feature-card-body">
          <p class="feature-description"><%- TranslationService.t('home-manage-description') %></p>
          <div class="feature-buttons">
            <a href="<%= BrandingService.getBrandAndPortalPath(req) %>/record/dataRecord/edit" class="btn btn-feature-primary"><%= TranslationService.t('create-datarecord')%></a>
            <a href="<%= BrandingService.getBrandAndPortalPath(req) %>/dashboard/dataRecord" class="btn btn-feature-secondary"><%= TranslationService.t('edit-dashboard-datarecord')%></a>
          </div>
        </div>
      </div>
    </div>

    <!-- Publish and Share Card -->
    <div class="col-lg-3 col-md-6 mb-4">
      <div class="feature-card">
        <div class="feature-card-header">
          <div class="feature-icon">
            <i class="fa fa-rocket"></i>
          </div>
          <h3 class="feature-title"><%= TranslationService.t('menu-publish')%></h3>
        </div>
        <div class="feature-card-body">
          <p class="feature-description"><%- TranslationService.t('home-publish-description') %></p>
          <div class="feature-buttons">
            <a href="<%= BrandingService.getBrandAndPortalPath(req) %>/record/dataPublication/edit" class="btn btn-feature-primary"><%= TranslationService.t('create-data-publication')%></a>
            <a href="<%= BrandingService.getBrandAndPortalPath(req) %>/dashboard/dataPublication" class="btn btn-feature-secondary"><%= TranslationService.t('edit-dashboard-publication')%></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
