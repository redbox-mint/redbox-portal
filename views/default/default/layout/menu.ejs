<div class="mainmenu-area">
  <div class="container">
    <div class="row">

      <nav class="navbar navbar-expand-lg">
        <button type="button" class="navbar-toggle" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
            <span class="sr-only"><%= TranslationService.t('menu-toggle')%></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="nav navbar-nav d-flex">

            <% 
            var menuConfig = (typeof menu !== 'undefined') ? menu : null;
            if (menuConfig && menuConfig.items && menuConfig.items.length > 0) {
              for (const item of menuConfig.items) {
                if (item.children && item.children.length > 0) { %>
                  <li class="nav-item dropdown<%= item.active ? ' active' : '' %>">
                    <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><%= item.label %></a>
                    <ul class="dropdown-menu">
                      <% for (const child of item.children) { %>
                        <li><a class="dropdown-item<%= child.active ? ' active' : '' %>"
                            href="<%= child.href %>"
                            <% if (child.external) { %>target="_blank" rel="noopener noreferrer"<% } %>
                          ><%= child.label %></a></li>
                      <% } %>
                    </ul>
                  </li>
                <% } else { %>
                  <li class="<%= item.active ? 'active' : '' %>">
                    <a href="<%= item.href %>"
                       <% if (item.external) { %>target="_blank" rel="noopener noreferrer"<% } %>
                    ><%= item.label %></a>
                  </li>
                <% }
              }
            } %>

            <% if (menuConfig && menuConfig.showSearch && req.isAuthenticated && req.isAuthenticated()) { %>
            <li>
              <form class="nav-search-bar form-inline" method="get" action="<%= BrandingService.getBrandAndPortalPath(req) %>/record/search" name="form">
                <div class="input-group">
                  <input name="q" type="text" class="form-control" placeholder="<%= TranslationService.t('record-search-basic-search-placeholder') %>" aria-label="<%= TranslationService.t('record-search-basic-search-placeholder') %>">
                  <span class="input-group-btn">
                    <input class="btn btn-primary btn-search-bar" type="submit" value="<%= TranslationService.t("record-search-basic-search") %>">
                  </span>
                </div>
              </form>
            </li>
            <% } %>

          </ul>

        </div>
      </nav>
    </div>
  </div>
</div>
