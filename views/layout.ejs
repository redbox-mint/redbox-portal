<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    <%=typeof title == 'undefined' ? 'ReDBox' : title%>
  </title>

  <!-- Google Fonts -->
  <link href='//fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="<%= BrandingService.getBrandAndPortalPath(req) %>/styles/4_1_3-bootstrap.min.css">

  <!-- Font Awesome included via compiled SCSS (FA6) -->

  <!-- Custom CSS -->

  <link rel="stylesheet" href="<%= sails.config.appUrl %><%= BrandingService.getRootContext() %>/styles/style.css">
  <link rel="stylesheet" href="<%= sails.config.appUrl %><%= BrandingService.getRootContext() %>/styles/responsive.css">
  <link rel="stylesheet" href="<%= sails.config.appUrl %><%= BrandingService.getRootContext() %>/<%= typeof theme == 'undefined' ? req.param('theme') : theme %>/<%= typeof portal == 'undefined' ? req.param('portal') : portal %>/styles/theme.css">

  <angular-bootstrap rootContext="<%= BrandingService.getRootContext() %>"></angular-bootstrap>
</head>

<body>
  <div class="header-area">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="user-menu">
            <ul>
              <% if (!req.isAuthenticated())  { %>
                <li><a href="user/login"><i class="fa fa-user"></i>Login</a></li>
              <% } else { %>
                <li><i class="fa fa-user"></i>&nbsp;Welcome <%= req.user.name %></li>
                <li><a href="user/logout">Logout</a></li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End header area -->

  <div class="site-branding-area">
    <div class="container">
      <div class="row">
        <div class="col-sm-10">
          <div class="logo">
            <h1><img src="images/<%= sails.config.static_assets.logoName %>"/></h1>
          </div>
        </div>

        <div class="col-sm-2 search-box">
          <form role="form" class="form-inline search-form">
            <div class="form-group has-feedback">
              <input type="text" class="form-control" placeholder="Search">
              <i class="form-control-feedback glyphicon glyphicon-search"></i>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- End site branding area -->

  <div class="mainmenu-area">
    <div class="container">
      <div class="row">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-bs-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="<%= BrandingService.getRootContext() %>">Home</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- End mainmenu area -->

  <div class="maincontent-title-area">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="maincontent-bit-title text-center">
            <h2>Researcher Dashboard</h2>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="maincontent-body">
    <%- body %>
  </div>



  <div class="footer-bottom-area navbar-bottom">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="copyright">
            <p>&copy; <%= new Date().getFullYear() %> Queensland Cyber Infrastructure Foundation</p>
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Latest jQuery form server -->
  <script
  src="<%= BrandingService.getBrandAndPortalPath(req) %>/js/jquery.min.js"
  integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
  crossorigin="anonymous"></script>

  <!-- Bootstrap JS form CDN -->
  <script src="<%= BrandingService.getBrandAndPortalPath(req) %>/js/3_4_1-bootstrap.min.js"
    integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd"
    crossorigin="anonymous"></script>

</body>

</html>
