{
    "extends": "@tsconfig/node18/tsconfig.json",   
    "compilerOptions": {
      "outDir": "./",
      "rootDir": "./typescript",
      "strict": false,
      "inlineSourceMap": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "exclude": [
      "node_modules/**",
      "typings/browser/**",
      "typings/browser.d.ts",
      "test/integration/**/*.ts",
      "angular/**"
    ],
    "include": [
      "typescript/**/*.ts", 
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    
}
