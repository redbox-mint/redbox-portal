{
    "extends": "./typescript/tsconfig.base.json",
    "compilerOptions": {
      "outDir": "./",
      "rootDir": "./typescript",
      "strict": false,
      "types": ["node", "mocha", "chai"]
    },
    "exclude": [
      "node_modules/**",
      "typings/browser/**",
      "typings/browser.d.ts",
      "test/integration/**/*.ts",
      "typescript/test/**",
      "angular/**"
    ],
    "include": [
      "typescript/**/*.ts",
      "typescript/**/*.d.ts",
      "test/integration/.mocharc.ts"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
