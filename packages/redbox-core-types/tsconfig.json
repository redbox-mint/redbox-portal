{
  "extends": "../../typescript/tsconfig.base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "allowUmdGlobalAccess": true,
    "types": ["node", "lodash"]
