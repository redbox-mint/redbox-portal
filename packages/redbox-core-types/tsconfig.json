{
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": false,
    "inlineSourceMap": true,
    "lib": [
      "es2023"
    ],
    "baseUrl": ".",
    "paths": {
      "@researchdatabox/sails-ng-common": ["../sails-ng-common/src/index.ts"],
      "@researchdatabox/raido-openapi-generated-node": ["../raido/src/index.ts"],
      "@researchdatabox/redbox-core-types": ["./src/index.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
