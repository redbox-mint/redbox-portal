{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node24/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./",
    "rootDir": "./typescript",
    "strict": false,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types",
      "../../../node_modules/@types",
      "node_modules/@researchdatabox/redbox-core-types/node_modules/@types",
      "../../node_modules/@researchdatabox/redbox-core-types/node_modules/@types",
      "../../../node_modules/@researchdatabox/redbox-core-types/node_modules/@types",
      "../../../core/node_modules/@types"
    ],
    "paths": {
      "rxjs": [
        "node_modules/rxjs",
        "node_modules/@researchdatabox/redbox-core-types/node_modules/rxjs",
        "../../node_modules/rxjs",
        "../../node_modules/@researchdatabox/redbox-core-types/node_modules/rxjs",
        "../../../node_modules/rxjs",
        "../../../node_modules/@researchdatabox/redbox-core-types/node_modules/rxjs"
      ],
      "rxjs/*": [
        "node_modules/rxjs/*",
        "node_modules/@researchdatabox/redbox-core-types/node_modules/rxjs/*",
        "../../node_modules/rxjs/*",
        "../../node_modules/@researchdatabox/redbox-core-types/node_modules/rxjs/*",
        "../../../node_modules/rxjs/*",
        "../../../node_modules/@researchdatabox/redbox-core-types/node_modules/rxjs/*"
      ],
      "luxon": [
        "node_modules/luxon",
        "node_modules/@researchdatabox/redbox-core-types/node_modules/luxon",
        "../../node_modules/luxon",
        "../../node_modules/@researchdatabox/redbox-core-types/node_modules/luxon",
        "../../../node_modules/luxon",
        "../../../node_modules/@researchdatabox/redbox-core-types/node_modules/luxon"
      ],
      "lodash": [
        "node_modules/lodash",
        "node_modules/@researchdatabox/redbox-core-types/node_modules/lodash",
        "../../node_modules/lodash",
        "../../node_modules/@researchdatabox/redbox-core-types/node_modules/lodash",
        "../../../node_modules/lodash",
        "../../../node_modules/@researchdatabox/redbox-core-types/node_modules/lodash"
      ],
    }
  },
  "exclude": [
    "node_modules/**",
    "typings/browser/**",
    "typings/browser.d.ts",
    "test/**/*.ts",
    "dist/**"
  ],
  "include": [
    "typescript/**/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": false
}
