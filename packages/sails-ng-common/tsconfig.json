{
  "extends": "../../typescript/tsconfig.base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "types": [
      "node",
      "mocha",
      "lodash",
      "luxon",
      "chai"
    ],
    "lib": [
      "ES2024",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules/**"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "typeAcquisition": {
    "include": [
      "node",
      "mocha",
      "lodash",
      "luxon",
      "chai"
    ]
  }
}
