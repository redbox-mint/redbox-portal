{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "mocha",
      "lodash",
      "moment"
    ],
    "lib": [
      "es2022",
      "dom"
    ],
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/**"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "typeAcquisition": {
    "include": [
      "node",
      "mocha",
      "lodash",
      "moment"
    ]
  }
}
