{
  "name": "@researchdatabox/sails-ng-common",
  "version": "0.2.1",
  "description": "Common models shared between Sails API endpoints and client-side Angular code",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "./dist/src"
  ],
  "scripts": {
    "test": "nyc --reporter=text mocha --exit --config test/unit/.mocharc.js dist/test/unit/**/*.test.js",
    "pretest": "npm run test:compile && mkdir -p support/junit",
    "test:clean": "rm -rf support/junit || true",
    "compile": "tsc -p tsconfig.prod.json",
    "compile:clean": "rm -rf dist/",
    "test:compile": "tsc -p tsconfig.test.json",
    "pretest:compile": "npm run compile:clean"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/redbox-mint/redbox-portal.git"
  },
  "keywords": [
    "redbox",
    "research",
    "research",
    "data",
    "management",
    "planning"
  ],
  "author": "QCIF Engineering",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/redbox-mint/redbox-portal/issues"
  },
  "homepage": "https://github.com/redbox-mint/redbox-portal/packages/sails-ng-common",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.27.0",
    "@stylistic/eslint-plugin": "4.2.0",
    "@stylistic/eslint-plugin-js": "4.2.0",
    "@stylistic/eslint-plugin-ts": "4.2.0",
    "@tsconfig/node24": "^24.0.1",
    "@types/chai": "5.2.1",
    "@types/lodash": "4.17.17",
    "@types/lodash-es": "4.17.10",
    "@types/luxon": "3.7.1",
    "@types/mocha": "10.0.10",
    "@types/node": "20.17.48",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "chai": "5.2.0",
    "eslint": "9.27.0",
    "jsonata": "^2.1.0",
    "mocha": "11.4.0",
    "mocha-junit-reporter": "2.2.1",
    "nyc": "17.1.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.54.0"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "lines": 45,
    "statements": 45,
    "functions": 45,
    "branches": 45,
    "include": [
      "**/src/handlebars-helpers.*",
      "**/src/config/names/**/*.*",
      "**/src/validation/**/*.*"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "dependencies": {
    "@jsonjoy.com/json-pointer": "^17.63.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "luxon": "^3.7.2",
    "marked": "^17.0.0",
    "ts-json-schema-generator": "^2.4.0"
  },
  "peerDependencies": {
    "jsonata": "^2.1.0"
  }
}
