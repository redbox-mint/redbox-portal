meta {
  name: Import RVA Vocabulary
  type: http
  seq: 5
}

post {
  url: {{host}}/default/rdmp/api/vocabulary/import
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{token}}
}

body:json {
  {
    "rvaId": "225"
  }
}

tests {
  test("Status code is 200", function () {
    expect(res.getStatus()).to.equal(200);
  });

  test("Set RVA vocabulary id for subsequent requests", function () {
    const jsonData = res.getBody();
    const rvaVocabularyId = jsonData?.data?.id || jsonData?.id;
    expect(rvaVocabularyId).to.be.a('string');
    bru.setEnvVar("rvaVocabularyId", rvaVocabularyId);
  });
}
