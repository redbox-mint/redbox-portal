tests {
  test("Status code is 200", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("Test response format", function () {
        var jsonData = res.getBody();
        var records = jsonData;

        if (!Array.isArray(jsonData)) {
          expect(jsonData).to.have.property('summary');
          expect(jsonData).to.have.property('records');
          records = jsonData.records;
        }

        expect(records).to.be.an('array');

        var firstRecord = records.find(function (record) {
          return record && typeof record === 'object';
        });

        if (firstRecord) {
          expect(firstRecord).to.have.property('fullName');
          expect(firstRecord).to.have.property('email');
          expect(firstRecord).to.have.property('orcid');
        }
  });
  
}
