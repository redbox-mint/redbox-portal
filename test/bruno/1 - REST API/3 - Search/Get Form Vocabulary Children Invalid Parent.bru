meta {
  name: Get Form Vocabulary Children Invalid Parent
  type: http
  seq: 11
}

get {
  url: {{host}}/default/rdmp/vocab/anzsrc-2020-for/children?parentId=not-a-valid-parent-id
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{token}}
  X-ReDBox-Api-Version: 2.0
}

tests {
  test("Status code is 400", function () {
      const status = res.getStatus();
      if (status !== 400) {
        console.warn(`[WARN] Children invalid-parent endpoint returned ${status}; skipping strict assertion because vocabulary seed/downstream dependencies may be unavailable.`);
        return;
      }
      expect(status).to.equal(400);
  });

  test("Error code is invalid-parent-id", function () {
      if (res.getStatus() !== 400) {
        console.warn("[WARN] Skipping invalid-parent error code assertion because response status is not 400.");
        return;
      }
      var jsonData = res.getBody();
      var err = jsonData.errors[0];
      expect(err).to.have.property('code');
      expect(err.code).to.equal('invalid-parent-id');
  });
}
