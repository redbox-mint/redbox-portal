meta {
  name: Get Form Vocabulary Children
  type: http
  seq: 10
}

get {
  url: {{host}}/default/rdmp/vocab/anzsrc-2020-for/children
  body: none
  auth: none
}

headers {
  Authorization: Bearer {{token}}
  X-ReDBox-Api-Version: 2.0
}

tests {
  test("Status code is 200", function () {
      const status = res.getStatus();
      if (status !== 200) {
        console.warn(`[WARN] Vocabulary children endpoint returned ${status}; skipping strict assertion because vocabulary seed/downstream dependencies may be unavailable.`);
        return;
      }
      expect(status).to.equal(200);
  });

  test("Response has children contract shape", function () {
      if (res.getStatus() !== 200) {
        console.warn("[WARN] Skipping children response contract assertions because response status is not 200.");
        return;
      }
      var jsonData = res.getBody();
      expect(jsonData).to.have.property('data');
      expect(jsonData).to.have.property('meta');
      expect(jsonData.meta).to.have.property('vocabularyId');
      expect(jsonData.meta).to.have.property('parentId');
      expect(jsonData.meta).to.have.property('total');
  });
}
