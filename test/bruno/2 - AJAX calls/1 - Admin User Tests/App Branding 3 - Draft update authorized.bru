meta {
  name: App Branding - Draft update authorized
  type: http
  seq: 902
}

post {
  url: {{host}}/default/rdmp/app/branding/draft
  body: json
  auth: none
}

headers {
  X-Source: jsclient
  Content-Type: application/json
  Accept: application/json, text/plain, */*
}

body:json {
  {
    "variables": {
      "primary-color": "#112233"
    }
  }
}

script:pre-request {
  const cookie = bru.getVar("cookie");
  if(cookie) { req.setHeader("Cookie", cookie); }
}

tests {
  test("Status code is 200", function(){
    expect(res.getStatus()).to.equal(200);
  });
  test("primary-color updated", function(){
    var raw = res.getBody();
    var body = typeof raw === 'string' ? JSON.parse(raw) : raw;
    expect(body.branding.variables['primary-color']).to.equal('#112233');
  });
}
